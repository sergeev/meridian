<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
	<name>meridian</name>
	<creationDate>14 May 2013</creationDate>
	<author>Artem Bobrov</author>
	<authorEmail>meridos@mail.ru</authorEmail>
	<authorUrl>mailto:meridos@mail.ru</authorUrl>
	<copyright>Центр детско-юношеского технического творчества "Меридиан". (С) 2013</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>2.1.1</version>
	<description>TPL_MERIDIAN_XML_DESCRIPTION</description>

	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>javascript</folder>
		<folder>fonts</folder>
		<folder>language</folder>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
	</files>

	<positions>
		<position>header</position>
		<position>top-menu</position>
		<position>navigation</position>
		<position>search</position>
		<position>top-news</position>
		<position>right</position>
		<position>wrap-1</position>
		<position>wrap-2</position>
		<position>wrap-3</position>
		<position>footer</position>
		<position>debug</position>
	</positions>

	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
		<language tag="ru-RU">ru-RU/ru-RU.tpl_meridian.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.tpl_meridian.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="wrapperSmall"  class="validate-numeric" type="text" default="53"
					label="TPL_MERIDIAN_FIELD_WRAPPERSMALL_LABEL"
					description="TPL_MERIDIAN_FIELD_WRAPPERSMALL_DESC"
					filter="integer" />

				<field name="wrapperLarge"  class="validate-numeric" type="text" default="72"
					label="TPL_MERIDIAN_FIELD_WRAPPERLARGE_LABEL"
					description="TPL_MERIDIAN_FIELD_WRAPPERLARGE_DESC"
					filter="integer" />

				<field name="logo" type="media"
					label="TPL_MERIDIAN_FIELD_LOGO_LABEL" description="TPL_MERIDIAN_FIELD_LOGO_DESC" />

				<field name="sitetitle"  type="text" default=""
					label="TPL_MERIDIAN_FIELD_SITETITLE_LABEL"
					description="TPL_MERIDIAN_FIELD_SITETITLE_DESC"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="TPL_MERIDIAN_FIELD_DESCRIPTION_LABEL"
					description="TPL_MERIDIAN_FIELD_DESCRIPTION_DESC"
					filter="string" />

				<field name="navposition" type="list" default="center"
					label="TPL_MERIDIAN_FIELD_NAVPOSITION_LABEL"
					description="TPL_MERIDIAN_FIELD_NAVPOSITION_DESC"
					filter="word"
				>
					<option value="center">TPL_MERIDIAN_OPTION_AFTER_CONTENT</option>
					<option value="left">TPL_MERIDIAN_OPTION_BEFORE_CONTENT</option>
				</field>

				<field name="templatecolor" type="list" default="nature"
					label="TPL_MERIDIAN_FIELD_TEMPLATECOLOR_LABEL"
					description="TPL_MERIDIAN_FIELD_TEMPLATECOLOR_DESC"
					filter="word"
				>

					<option value="nature">TPL_MERIDIAN_OPTION_NATURE</option>
					<option value="personal">TPL_MERIDIAN_OPTION_PERSONAL</option>

				</field>


			</fieldset>
		</fields>
	</config>
</extension>
